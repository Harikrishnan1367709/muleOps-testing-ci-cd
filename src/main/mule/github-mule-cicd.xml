                <http:headers>#[vars.outboundHeaders default {}]</http:headers>
            </http:response>
            <http:error-response statusCode="#[vars.httpStatus default 500]">
                <http:body>#[payload]</http:body>
                <http:headers>#[vars.outboundHeaders default {}]</http:headers>
            </http:error-response>
        </http:listener>
        <apikit:router config-ref="github-mule-cicd-config" />
    </flow>
    <flow name="get:\resource:github-mule-cicd-config">
        <choice doc:name="Choice" doc:id="58643b98-609e-4d7b-87d9-43d303b0bdef" >
			<when expression='#[attributes.queryParams.choice == "1"]'>
				<ee:transform doc:name="Transform Message" doc:id="c06cbdd6-da0d-4268-9e8e-cf592b48c959" >
					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
  "message": p('message.content'),
  "securedMessage": p("secure::message.secureMessage"),
  "demo": "This is a message from demo 25-July-2025",
  "queryParamsNumber": attributes.queryParams.choice,
  "choice": "custom"
} ]]></ee:set-payload>
					</ee:message>
				</ee:transform>
