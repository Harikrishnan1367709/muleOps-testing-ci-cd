                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  "message": p('message.content'),
  "securedMessage": p("secure::message.secureMessage"),
  "demo": "This is a message from demo",
  "queryParamsNumber":  attributes.queryParams.choice,
  "choice": "default"
} ]]></ee:set-payload>
            </ee:message>
        </ee:transform>
			</otherwise>
		</choice>
		<logger level="INFO" doc:name="Logger" doc:id="0e1cc620-357d-47d9-be37-a6a035ac49fa" message="#[payload]"/>
    </flow>
</mule>
