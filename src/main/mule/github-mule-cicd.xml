    </http:listener-config>
    <apikit:config name="github-mule-cicd-config" api="resource::b4e621f5-c474-430e-ad3a-586a08077621:github-mule-cicd:1.0.0:raml:zip:github-mule-cicd.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
